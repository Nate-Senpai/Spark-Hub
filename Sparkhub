local Material = loadstring(game:HttpGet("https://pastebin.pl/view/raw/aa32e07d"))()
local UI = Material.Load({
     Title = "SparkHub v1.3",
     Style = 3,
     SizeX = 300,
     SizeY = 300,
     Theme = "Dark"
})


local Page = UI.New({
    Title = "Main"
})
Page.Button({
    Text = "Credits",
    Callback = function()
       wait(1.2)
game.StarterGui:SetCore("SendNotification", {
Title = "Credits:"; -- the title (ofc)
Text = "Nate <o/"; -- what the text says (ofc)
Duration = 5; -- how long the notification should in secounds
})
end
})

Page.Toggle({
    Text = "Disable Blur",
    Callback = function(value)
        Enabled = value
        if value == true then do
        spawn(function()
            

_G.Toggle = true -- Change to false and execute to turn off

while _G.Toggle do wait()
local speaker = game.Players.LocalPlayer
wait(0.1)
game:GetService("Lighting").Blur.Enabled = false
game:GetService("Lighting").ColorCorrection.Enabled = false
game:GetService("Lighting").GlobalColorCorrection.Enabled = false
game:GetService("Lighting")["Blur [Shader Mod]"].Enabled = false
end


game:GetService("RunService").Heartbeat:Wait()
	
        end)
        end
        else
            

_G.Toggle = false 
end
end
,
Enabled = false
})

local Page = UI.New({
    Title = "Era of Althea"
})


Page.Button({
    Text = "Buy Health Potion",
    Callback = function()
       local args = {
    [1] = workspace.Purchases.Items:FindFirstChild("Large Health Potion")
}

game:GetService("ReplicatedStorage").Events.PurchaseItem:FireServer(unpack(args))
end
})
